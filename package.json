{
  "name": "wage-workspace",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "build": "npm run build --workspaces --if-present",
    "build:shared": "npm run build -w wage-shared",
    "build:asset-manager": "npm run build -w asset-manager",
    "build:test-api": "npm run build -w test-api",
    "build:match-processor": "npm run build -w match-processor",
    "start": "npm run start --workspaces --if-present",
    "dev": "concurrently -n \"test-api,match-processor\" -c \"blue,green\" 'npm run dev:test-api' 'npm run dev:match-processor'",
    "dev:test-api": "npm run dev -w test-api",
    "dev:match-processor": "npm run dev -w match-processor",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present"
  },
  "lint-staged": {
    "*.{yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "concurrently": "^9.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.4.4"
  }
}
